{
  "compilerOptions": {
    /* Basic */
    "allowJs": false,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": ".",
    "target": "ES6",

    /* Type Checkin */
    "noImplicitAny": true,
    "strict": true,

    /* Module Resolution */
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Advanced */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "src/app"],
  "include": ["src"]
}
